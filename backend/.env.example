# Project Info
PROJECT_NAME="LocalAI Family Wellness Platform"
PROJECT_DESCRIPTION="A local, safe, and free stateful AI family wellness platform"
VERSION="0.1.0"

# API
API_V1_STR="/api/v1"

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=family_wellness
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# If you want to provide DATABASE_URL explicitly, uncomment:
# DATABASE_URL=postgresql+psycopg://postgres:password@postgres:5432/family_wellness
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# If you want to provide REDIS_URL explicitly, uncomment:
# REDIS_URL=redis://:@redis:6379/0

# Ollama
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
# If you want to provide OLLAMA_URL explicitly, uncomment:
# OLLAMA_URL=http://ollama:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3:latest

# Keycloak
KEYCLOAK_HOST=keycloak
KEYCLOAK_PORT=8080
# If you want to provide KEYCLOAK_URL explicitly, uncomment:
# KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=localai-family
KEYCLOAK_CLIENT_ID=backend-api

# MinIO
MINIO_HOST=minio
MINIO_PORT=9000
# If you want to provide MINIO_ENDPOINT explicitly, uncomment:
# MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Ntfy
NTFY_HOST=ntfy
NTFY_PORT=80
# If you want to provide NTFY_URL explicitly, uncomment:
# NTFY_URL=http://ntfy:80
NTFY_DEFAULT_TOPIC=localai-family
NTFY_USERNAME=
NTFY_PASSWORD=

# Email (Optional SMTP Relay)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

# mDNS Service Discovery
MDNS_SERVICE_NAME=localai-family
MDNS_SERVICE_TYPE=_http._tcp.local.

# Security (Critical - MUST be overridden)
SECRET_KEY=changethissecretkey
